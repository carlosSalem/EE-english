<style>
  .mobile-nav-logo {
    visibility: hidden;
  }

  .mobile-nav-logo {
    position: absolute;
    left: 58%;
    transform: translateX(-50%);
    transition: 0.8s transform;
    max-width: 200px;
    height: auto;
    top: 20px;
    padding-top: 5px;
  }
  @media (max-width: 768px) {
    .small-navbar a:active {
      background-color: #35a8e0;
      color: white;
      transition: background-color 0.3s ease, color 0.3s ease;
    }
  }
</style>

<div class="logo container max-w-6xl mx-auto py-8 px-4">
  <a href="/">
    <img src="/images/logo.png" alt="Empleo Emprende" />
  </a>
</div>
<div
    class="bg-[#E63A32] min-h-14 max-md:flex max-md:items-center relative max-md:sticky max-md:top-0 max-md:z-10"
>
  <!-- lg navbar -->
  <img
      class="mobile-nav-logo"
      src="/images/EE1White.png"
      alt="Empleo Emprende"
  />
  <div
      class="nav-links container max-w-6xl mx-auto hidden gap-6 space-x-4 px-4 py-5 text-white font-medium uppercase md:flex"
  >
    <a class="border-l border-gray-200/30 px-3 py-1" href="/">Home</a>
    <a class="border-l border-gray-200/30 px-3 py-1" href="/topic?name=Empleo"
    >Jobs</a
    >
    <a
        class="px-3 py-1 border-l border-gray-200/30"
        href="/topic?name=Desarrollo laboral">Career Development</a
    >
    <a
        class="px-3 py-1 border-l border-gray-200/30"
        href="/topic?name=Emprendimiento">Entrepreneurship</a
    >
    <a class="px-3 py-1 border-l border-gray-200/30" href="/topic?name=Noticias"
    >News</a
    >
  </div>
  <!-- sm nav -->
  <button
      class="menu-btn bg-blue-400 p-2 rounded-md text-white block align-middle md:hidden ml-4"
  ><svg
      class="w-5 h-5 fill-white"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 448 512"
  >
    <path
        d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z"
    ></path></svg
  ></button
  >
  <div class="mx-auto md:hidden small-menu-logo transition-[0.3s]">
    <img
        class="max-w-56 transition-[0.3s]"
        src="/images/EE1White@2x.png"
        alt="Empleo Emprende"
    />
  </div>
  <div
      class="small-navbar p-3 bg-white flex flex-col justify-between absolute top-14 w-full transition-[0.3] scale-0 opacity-0 z-10 md:hidden"
  >
    <a class="border-b border-gray-200/30 py-1.5" href="/">Home</a>
    <a class="border-b border-gray-200/30 py-1.5" href="/topic?name=Empleo"
    >Jobs</a
    >
    <a
        class="py-1.5 border-b border-gray-200/30"
        href="/topic?name=Desarrollo laboral"
        rel="follow">Career Development</a
    >
    <a
        class="py-1.5 border-b border-gray-200/30"
        href="/topic?name=Emprendimiento">Entrepreneurship</a
    >
    <a class="py-1.5 border-b border-gray-200/30" href="/topic?name=Noticias"
    >News</a
    >
  </div>
</div>

<script>
  const menuBtn: any = document.querySelector(".menu-btn");
  const smallNavbar: any = document.querySelector(".small-navbar");
  menuBtn &&
  menuBtn.addEventListener("click", () => {
    //smallNavbar.style.transform = "scale(0)";
    smallNavbar.classList.toggle("scale-0");
    smallNavbar.classList.toggle("opacity-0");
  });
  window.addEventListener("scroll", function () {
    let scrollPosition = window.scrollY;

    // Add or remove classes based on scroll position
    const smallMenuLogo: any = document.querySelector(".small-menu-logo");
    if (scrollPosition > 100) {
      // Add class when scrolled down
      smallMenuLogo.classList.remove("scale-0");
      smallMenuLogo.classList.add("scale-1");
    } else if (scrollPosition === 0) {
      // Add class when back to very top
      smallMenuLogo.classList.add("scale-0");
      smallMenuLogo.classList.remove("scale-1");
    }
  });
</script>